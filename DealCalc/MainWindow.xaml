<Window x:Class="DealCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DealCalc"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="750" Width="1100">
    <Window.DataContext>
        <local:RatioChartViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Button  Width="200" Height="50" Content="导入文件" Command="{Binding OpenFileCommand}" DockPanel.Dock="Top"/>
        <TextBox DockPanel.Dock="Top" Height="50" Text="{Binding FilePathText, UpdateSourceTrigger=PropertyChanged}"/>
        <local:EffectiveRatioChart DataContext="{Binding ChartViewModel}"/>
    </DockPanel>
</Window>
